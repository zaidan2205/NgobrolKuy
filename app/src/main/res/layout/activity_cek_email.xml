<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".cek_email">
    <TextView
        android:id="@+id/JudulCekEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:fontFamily="@font/redhatdisplay_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Cek Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"/>
    <ImageButton
        android:id="@+id/kembali"
        android:layout_width="109dp"
        android:layout_height="66dp"
        android:clickable="true"
        android:onClick="back"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/arrow_back"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="13dp"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/kalimat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="48dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/JudulCekEmail">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/redhatdisplay_regular"
            android:text="Link reset password telah dikirim."
            android:textColor="@color/white"
            android:textSize="12pt"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/redhatdisplay_regular"
            android:text="Silahkan cek inbox Anda"
            android:textColor="@color/white"
            android:textSize="8pt" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kalimat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="32dp"
        android:backgroundTint="@color/pink">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="10pt"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="KEMBALI"
            android:clickable="true"
            android:onClick="done"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>